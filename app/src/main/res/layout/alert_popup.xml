<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contents"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#ffffff"
    android:background="@drawable/round_alert_box">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="Area 51" />

        <TextView
            android:id="@+id/stackexchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:text="stackexchange.com" />

        <TextView
            android:id="@+id/stackoverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="stackoverflow.com" />

        <TextView
            android:id="@+id/superuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textAlignment="center"
            android:textColorLink="#0000FF"
            android:textStyle="bold"
            android:text="superuser.com" />

        <Button
            android:id="@+id/surprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#3300cc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="WowoW"
            android:background="@drawable/agree_button"/>

        <TextView
            android:id="@+id/serverfault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textAlignment="center"
            android:textColorLink="#05c5cf"
            android:textStyle="bold"
            android:text="serverfault.com" />

        <Button
            android:id="@+id/entertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#cc0033"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="YayaY"
            android:background="@drawable/agree_button"/>
    </LinearLayout>

</RelativeLayout>